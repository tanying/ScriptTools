<?xml version="1.0" encoding="utf-8" standalone="no"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:installLocation="auto" package="com.adobe.reader">
    <application android:debuggable="false" android:icon="@drawable/reader_app_android" android:label="@string/IDS_APP_NAME" android:largeHeap="true" android:name=".ARApp">
        <activity android:configChanges="keyboardHidden|orientation" android:label="@string/IDS_APP_NAME" android:launchMode="singleTask" android:name=".ARViewer" android:screenOrientation="user" android:theme="@android:style/Theme.NoTitleBar.Fullscreen"/>
        <activity android:launchMode="singleTop" android:name=".AdobeReader" android:screenOrientation="user" android:theme="@style/Theme.Transparent">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:pathPattern=".*\\.pdf" android:scheme="file"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="application/pdf"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:host="*" android:pathPattern=".*\\.pdf" android:scheme="http"/>
            </intent-filter>
        </activity>
        <activity android:name=".ARAboutActivity" android:theme="@style/aboutDialogTheme"/>
        <activity android:configChanges="keyboardHidden|orientation" android:name=".PrintDialogActivity"/>
        <activity android:name=".ARSettingsActivity"/>
        <activity android:configChanges="keyboardHidden|orientation" android:launchMode="singleTop" android:name=".ARSplitPane" android:theme="@android:style/Theme.NoTitleBar" android:windowSoftInputMode="stateUnchanged"/>
        <provider android:authorities="com.adobe.reader.fileprovider" android:grantUriPermissions="false" android:name=".ARContentProvider" android:readPermission="com.adobe.reader.provider.permission.READ" android:writePermission="com.adobe.reader.provider.permission.WRITE">
            <grant-uri-permission android:pathPrefix="/attachment_extracted_docs/"/>
            <grant-uri-permission android:pathPrefix="/.Skybox.Cache/"/>
        </provider>
        <activity android:configChanges="orientation" android:name=".ARSendForSignature">
            <intent-filter android:icon="@drawable/echosign_app_android" android:label="@string/IDS_SENDFORSIGNATURE_COMMAND_LABEL">
                <action android:name="android.intent.action.SEND"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="application/pdf"/>
            </intent-filter>
        </activity>
        <activity android:configChanges="orientation" android:exported="false" android:name=".cloud.ui.FileTransferActivity" android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen"/>
        <service android:exported="false" android:name=".AREchoSignUploadService"/>
        <service android:exported="false" android:name=".ARFileTransferService"/>
    </application>
    <permission android:description="@string/IDS_PROVIDER_READ_PERMISSION_DESC" android:label="@string/IDS_PROVIDER_READ_PERMISSION_LABEL" android:name="com.adobe.reader.provider.permission.READ" android:protectionLevel="signature"/>
    <permission android:description="@string/IDS_PROVIDER_WRITE_PERMISSION_DESC" android:label="@string/IDS_PROVIDER_WRITE_PERMISSION_LABEL" android:name="com.adobe.reader.provider.permission.WRITE" android:protectionLevel="signature"/>
    <uses-permission android:name="com.adobe.reader.provider.permission.READ"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <supports-screens android:anyDensity="true" android:largeScreens="true" android:normalScreens="true" android:smallScreens="true" android:xlargeScreens="true"/>
</manifest>
